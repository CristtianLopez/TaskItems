@model List<EjercitacionMVC.Models.TaskItem>

<h1>Lista de Tareas</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Descripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td> <a class="btn btn-primary" href="/Task/Edit?id=@task.Id">Editar</a></td>
                <td> <a class="btn btn-danger" href="/Task/Delete?id=@task.Id">Eliminar</a></td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="/Task/Create">Agregar Tarea</a>

